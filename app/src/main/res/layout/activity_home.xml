<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.laksh.neutro_applicationc.HomeActivity">

    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="708dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="35dp"
        tools:layout_editor_absoluteX="49dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="53dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.09"
                android:clickable="true"
                app:srcCompat="@drawable/pc" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1.01"
                android:clickable="true"
                android:fontFamily="sans-serif-condensed"
                android:text="User"
                android:textAlignment="textStart"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0.09"
                android:background="@color/colorWhite"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/bluetooth_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/btnCalculate"
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.44"
                android:adjustViewBounds="false"
                android:background="@color/colorWhite"
                android:contentDescription="Calculate Nutrients and Calories"
                android:cropToPadding="false"
                android:elevation="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/calculate_icon">

            </ImageButton>

            <ImageButton
                android:id="@+id/btnStats"
                android:layout_width="131dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.08"
                android:background="@color/colorWhite"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/statistics_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.33"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="143dp"
                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/reminder_icon" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="145dp"
                android:layout_height="143dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorWhite"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/logout_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:text="(C) Neutro"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_weight="0.36"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/milky" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
